<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<p>
  <strong>Instructions:</strong>
  <%= @recipe.instructions %>
</p>

<p>
  <strong>Ingredients:</strong>
  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe.recipe_ingredients.each do |ri| %>
      <tr>
        <td><%= ri.ingredient.name %></td>
        <td><%= ri.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</p>

<%= link_to 'Back', recipes_path %>

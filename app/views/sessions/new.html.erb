<h1>Log In<h2>

<%= form_with(url: login_path, scope: :session, local: true) do |form| %>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="action">
    <%= form.submit "Login" %>
  </div>
<% end %>